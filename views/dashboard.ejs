  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"> -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="background.css">

</head>
<body>

  <% include partials/header %>
  <div class="balance">balance</div>
    
    <div class="pageHeading"><h1>Dashboard</h1></div>
    
    <label for="decks" class="topics-header leftAlign">Explore Decks: </label>
    <table id="decks" class="leftAlign">
      <tbody >
        <tr >
          <form class="topics-header" action="/displayDecks" method="get">
            <td><button type="submit" name="box" value="2" class="topics">Science</button></td>
            <td><button type="submit" name="box" value="1" class="topics">Math</button></td>
            <td><button type="submit" name="box" value="3" class="topics">Comp Sci</button></td>
            <td><button type="submit" name="box" value="5" class="topics">Art</button></td>
            <td><button type="submit" name="box" value="7" class="topics">Music</button></td>
            <td><button type="submit" name="box" value="6" class="topics">History</button></td>
            <td><button type="submit" name="box" value="4" class="topics">English</button></td>
          </form>
        </tr>
      </tbody>
    </table>

    <!-- Explore Classes -->
    <label for="classes" class="topics-header leftAlign">Explore Classes: </label>
    <table id="classes" class="leftAlign">
      <tbody>
        <tr>
          <form class="" action="/classes" method="get">
            <td><button type="submit" name="box" value="2" class="topics">Science</button></td>
            <td><button type="submit" name="box" value="1" class="topics">Math</button></td>
            <td><button type="submit" name="box" value="3" class="topics">Computer Science</button></td>
            <td><button type="submit" name="box" value="5" class="topics">Art</button></td>
            <td><button type="submit" name="box" value="7" class="topics">Music</button></td>
            <td><button type="submit" name="box" value="6" class="topics">History</button></td>
            <td><button type="submit" name="box" value="4" class="topics">English</button></td>
          </form>
        </tr>
      </tbody>
    </table>

    <div class="leftAlign row">
      <div class="topics-header">Decks: </div>

      <form class="" action="/createDeck" method="post">
        <button class="createButton" type="submit" name="createDeck">Create New</button>
      </form>
    </div>

    <div class="balance">balance</div>

    <table class="leftAlign">
      <% for(let i = 0; i < key.length; i++) {%>
      <tr>
        <td class="topics"> <%= key[i].name %> </td>
        <form class="" action="/showDeck" method="GET">
          <td><button type="submit" value="<%= key[i].deckId %>" name="edit">Edit</button></td>
        </form>
        <form class="" action="/dashboard/deleteDeck" method="post">
          <td><button type="submit" value="<%= key[i].deckId %>" name="delete">Delete</button></td>
        </form>
      </tr>
      <% } %>
    </table>
</body>
</html>
